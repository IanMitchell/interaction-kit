{
	"compilerOptions": {
		"baseUrl": ".",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"noEmitOnError": true,
		"outDir": "dist",
		"pretty": true,
		"rootDir": ".",
		"skipLibCheck": true,
		"strict": true,
		"lib": ["es2021"],
		"module": "esnext",
		"target": "es2021",
		"moduleResolution": "node",
		"resolveJsonModule": true
	},
	// ignore node_modules and dist
	"exclude": ["node_modules", "dist"]
}

{
	"compilerOptions": {
		"baseUrl": ".",
		"declaration": true,
		"forceConsistentCasingInFileNames": true,
		"noEmitOnError": true,
		"pretty": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"strict": true,
		"exactOptionalPropertyTypes": true,
		"rootDir": ".",
		"types": [],
		"lib": ["ES2021"],
		"target": "ES2021",
		"moduleResolution": "Node"
	},
	"exclude": ["node_modules", "dist", "*.js"]
}

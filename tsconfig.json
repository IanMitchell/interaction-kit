{
  "compilerOptions": {
    "module": "ESNext",
    "target": "es6",
    "sourceMap": true,
    "strict": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "rootDir": "src",
    "outDir": "dist",
    "declaration": true,
    "declarationMap": true,
    "resolveJsonModule": true
  },
  "exclude": ["node_modules", "dist"]
}
